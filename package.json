{
  "name": "copperx-telegram",
  "version": "1.0.0",
  "description": "A Telegram bot that integrates with CopperX Payout's API, enabling users to manage USDC transactions directly through Telegram.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "generate:key": "node scripts/generate-app-key.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.11",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@telegraf/session": "^2.0.0-beta.7",
    "axios": "^1.8.3",
    "better-sqlite3": "^9.6.0",
    "dotenv": "^16.4.7",
    "ioredis": "^5.6.0",
    "kysely": "^0.27.2",
    "mongodb": "^6.14.2",
    "pg": "^8.14.0",
    "pusher-js": "^8.4.0",
    "redis": "^4.7.0",
    "telegraf": "^4.16.3",
    "winston": "^3.17.0"
  }
}